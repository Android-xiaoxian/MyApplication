<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 滑动开关自定义属性 -->
    <declare-styleable name="SwitchButton">
        <attr name="sb_shadow_radius" format="reference|dimension"/>
        <attr name="sb_shadow_offset" format="reference|dimension"/>
        <attr name="sb_shadow_color" format="reference|color"/>
        <attr name="sb_uncheck_color" format="reference|color"/>
        <attr name="sb_checked_color" format="reference|color"/>

        <attr name="sb_border_width" format="reference|dimension"/>
        <attr name="sb_checkline_color" format="reference|color"/>
        <attr name="sb_checkline_width" format="reference|dimension"/>
        <attr name="sb_uncheckcircle_color" format="reference|color"/>
        <attr name="sb_uncheckcircle_width" format="reference|dimension"/>
        <attr name="sb_uncheckcircle_radius" format="reference|dimension"/>

        <attr name="sb_checked" format="reference|boolean"/>
        <attr name="sb_shadow_effect" format="reference|boolean"/>
        <attr name="sb_effect_duration" format="reference|integer"/>
        <attr name="sb_button_color" format="reference|color"/>
        <attr name="sb_show_indicator" format="reference|boolean"/>
        <attr name="sb_background" format="reference|color"/>
        <attr name="sb_enable_effect" format="reference|boolean"/>
    </declare-styleable>
    <!-- 左右对齐显示自定义属性 -->
    <declare-styleable name="ItemLinearLayout">
        <attr name="left_text" format="string"/>
        <attr name="right_text" format="string"/>
    </declare-styleable>
    <!-- 左中右对齐显示自定义属性 -->
    <declare-styleable name="ItemLinearAlignLayout">
        <attr name="tv_left_text" format="string"/>
        <attr name="tv_center_text" format="string"/>
        <attr name="tv_right_text" format="string"/>
        <attr name="tv_font_style" format="reference|integer"/>
    </declare-styleable>
    <!-- 密码输入框自定义属性 -->
    <declare-styleable name="PasswordInputView">
        <attr name="borderWidth" format="dimension"/>
        <attr name="borderColor" format="color"/>
        <attr name="borderRadius" format="dimension"/>
        <attr name="passwordLength" format="integer"/>
        <attr name="passwordWidth" format="dimension"/>
        <attr name="passwordColor" format="color"/>
        <attr name="passwordRadius" format="dimension"/>
    </declare-styleable>
    <!-- 下载进度条 -->
    <declare-styleable name="DownloadProgressBar">
        <attr name="text_size" format="dimension"/>
    </declare-styleable>
    <!-- 下载进度按钮 -->
    <declare-styleable name="ProgressButton">
        <attr name="progressColor" format="color" />
    </declare-styleable>

    <!-- 圆角 -->
    <declare-styleable name="RoundImageView">
        <attr name="type" format="enum">
            <enum name="circle" value="1"/>
            <enum name="round" value="2"/>
        </attr>
        <attr name="radius" format="dimension"/>
    </declare-styleable>
    <!-- 圆环 -->
    <declare-styleable name="RotateCircleView">
        <attr name="textSize" format="dimension" />
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="circleColor" format="color" />
        <attr name="arcColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="startAngle" format="integer" />
        <attr name="angleSpeed" format="integer" />
    </declare-styleable>
    <!-- 自定义tool bar -->
    <declare-styleable name="TitleToolbar">
        <attr name="titleVisible" format="boolean" />
        <attr name="titleTextSize" format="dimension" />

        <attr name="subtitleVisible" format="boolean" />
        <attr name="subtitleTextSize" format="dimension" />

        <attr name="title_gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="fill_vertical" value="0x70" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="fill_horizontal" value="0x07" />
            <flag name="center" value="0x11" />
            <flag name="fill" value="0x77" />
            <flag name="clip_vertical" value="0x80" />
            <flag name="clip_horizontal" value="0x08" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>

        <attr name="closeVisible" format="boolean" />
        <attr name="closeText" format="string" />
        <attr name="closeTextAppearance" format="reference" />
        <attr name="closeTextColor" format="color" />
        <attr name="closeTextSize" format="dimension" />

        <attr name="backVisible" format="boolean" />
        <attr name="backText" format="string" />
        <attr name="backTextAppearance" format="reference" />
        <attr name="backTextColor" format="color" />
        <attr name="backTextSize" format="dimension" />
        <attr name="backIcon" format="reference" />
        <attr name="backMarginRight" format="dimension" />
    </declare-styleable>
</resources>